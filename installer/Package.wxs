<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="Gem Player" 
           Language="1033" 
           Version="0.2.0" 
           Manufacturer="James Moreau" 
           UpgradeCode="PUT-GUID-HERE">
           
    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" />
    <MediaTemplate EmbedCab="yes" />

    <!-- Install folder under Program Files -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="Gem Player" />
      </Directory>
      <Directory Id="DesktopFolder" />
    </Directory>

    <!-- Main exe -->
    <Component Id="MainExecutable" Guid="PUT-GUID-HERE-1">
      <File Id="GemPlayerExe" Source="Gem Player.exe" KeyPath="yes" />
    </Component>

    <!-- Desktop shortcut -->
    <Component Id="DesktopShortcut" Guid="PUT-GUID-HERE-2">
      <Shortcut Id="DesktopShortcut"
                Name="Gem Player"
                Description="Gem Player Music Application"
                Target="[INSTALLFOLDER]Gem Player.exe"
                WorkingDirectory="INSTALLFOLDER"
                Directory="DesktopFolder" />
      <RegistryValue Root="HKCU" Key="Software\Gem Player" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
    </Component>

    <Feature Id="MainFeature" Title="Gem Player" Level="1">
      <ComponentRef Id="MainExecutable"/>
      <ComponentRef Id="DesktopShortcut"/>
    </Feature>
  </Product>
</Wix>
